{
  "env": {
    "client": {
      "presets": ["env", "stage-3", "react", "flow"],
      "plugins": [
        [
          "transform-runtime", {
            "helpers": true,
            "polyfill": true,
            "regenerator": false,
          },
        ],
      ]
    },
    "server": {
      "presets": [
        "flow",
        "react",
        [
          "env", {
            "targets": {
              "node": "current",
            },
          },
        ]
      ],
      "plugins": [
          "transform-object-rest-spread",
          [
            "module-resolver", {
              "root": ["./src"],
              "alias": {
                "server": "./server",
                "isomerism": "./isomerism",
              },
            },
        ]
      ],
      "ignore": [
        "./src/client/styles/**/.css",
      ]
    }
  }
}
